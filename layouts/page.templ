package layouts

templ Page(title string) {
	<!DOCTYPE html>
	<html lang="en-US" class="scroll-smooth motion-reduce:scroll-auto">
		<head>
			<meta
				name="viewport"
				content={ "width=device-width, " +
							"initial-scale=1.0, " +
							"maximum-scale=1.0, " +
							"user-scalable=no" }
			/>
			<title>{ title }</title>
		</head>
		<body>
			{ children... }
		</body>
	</html>
}
